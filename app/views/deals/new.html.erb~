<% form_for(@deal) do |f| %>
	<% if @deal.errors.any? %>
		<div id="error_explanation">
			<h2> <%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h2> 

			<ul>
				<% @deal.errors.full_messages.each do |msg| %>
					<li><%= msg %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>

<div class="field">
<%= f.label :title %><br/>
<%= f.text_field :title %>
</div>

<div class="field">
<%= f.label :price %><br/>
<%= f.text_field :price %>
</div>

<div class="field">
<%= f.label :value %><br/>
<%= f.text_field :value %>

<div class="field">
<%= f.label :description %><br/>
<%= f.text_area :description %>
</div>

<div class="field">
<%= f.label :fine_prints%><br/>
<%= f.text_area :fine_prints%>
</div>

<div class="field">
	<%= f.label :start_time%>
	<%= f.datetime_select :start_time%>
</div>

<div class="field">
	<%= f.label :end_time %>
	<%=f.datetime_select :end_time %>
</div>


<div class="actions">
<%= f.submit %>
</div>

<%end %>

